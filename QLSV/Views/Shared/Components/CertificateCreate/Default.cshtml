@model QLSV.Models.Employee
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<table class="table" id="CertificateTable" >
    <thead> 
        <tr>
            <th>Certificate Name</th>
            <th>Certificate Rank</th>
            <th>Graduation Date</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @{
            var count = 0;
            <tr id="tablerow0">
                <td>
                    <input asp-for="Certificates[count].CertificateName" class="form-control" />
                    <span asp-validation-for="Certificates[count].CertificateName" class="text-danger"></span>
                </td>
                <td>
                    <input asp-for="Certificates[count].CertificateRank" class="form-control" />
                    <span asp-validation-for="Certificates[count].CertificateRank" class="text-danger"></span>
                </td>
                <td>
                    <input asp-for="Certificates[count].GraduationDate" class="form-control" />
                    <span asp-validation-for="Certificates[count].GraduationDate" class="text-danger"></span>
                </td>
                <td>
                    <button type="button" class="btn btn-primary" onclick="removeTr(0);">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    <button id="add" type="button" class="btn btn-primary">Add</button>
</p>
<script>    
    var counter = 1;
    $(function add() {
        $('#add').click(function () {
            var tr = '<tr id="tablerow' + counter + '">';
            tr += '<td> <input class="form-control" type="text" data-val="true" data-val-length="The field Certificate Name must be a string with a minimum length of 1 and a maximum length of 30." data-val-length-max="30" data-val-length-min="1" data-val-required="The Amount field is required." id="Certificates_[' + counter + ']__CertificateName" maxlength="30"  name="Certificates[' + counter + '].CertificateName" value=""> </td>';
            tr += '<td> <input class="form-control" type="text" data-val="true" data-val-length="The field Certificate Name must be a string with a minimum length of 1 and a maximum length of 10." data-val-length-max="10" data-val-length-min="1"  data-val-required="The Amount field is required." id="Certificates_[' + counter + ']__CertificateRank" maxlength="10"  name="Certificates[' + counter + '].CertificateRank" value=""> </td>';
            tr += '<td> <input class="form-control" type="date" data-val="true" data-val-required="The Amount field is required." id="Certificates_[' + counter + ']__GraduationDate" name="Certificates[' + counter + '].GraduationDate" value=""> </td>';
            tr += '<td> <button type="button" class="btn btn-primary" onclick="removeTr(' + counter + ');">Delete</button> </td>';
            tr += "</tr>";
            $(tr).appendTo("#CertificateTable");
            counter++;
            return false;
        });
    });
    function removeTr(index) {
        if (counter > 1) {
            $('#tablerow' + index).remove();
            counter--;
        }
        return false;
    }
</script>

<div>
    <a asp-action="Index">Back to List</a>
</div>

