@model IEnumerable<QLSV.Models.Certificate>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CertificateName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CertificateRank)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GraduationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CertificateName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CertificateRank)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GraduationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employee.Gender)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CertificateID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CertificateID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CertificateID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
